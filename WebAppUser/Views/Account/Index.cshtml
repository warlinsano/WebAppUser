@model IEnumerable<WebAppUser.Data.User>

@{
    ViewData["Title"] = "Index";
}



<h1>
    List of Users
</h1>

<p>
    |
    <a asp-action="Create" class="btn btn-primary ">
        <span aria-hidden="true" class="fa fa-plus"></span> Create New
    </a>

    @*<a asp-action="Edit" asp-route-id=" ">Edit</a>*@

    @*<a class="small" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>*@

