@model IEnumerable<WebAppUser.Models.ActivityLog>

@{
    ViewData["Title"] = "Index";
}

@section header {
    <!-- Custom styles for this page -->
    <link href="~/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Employees</h1>
<p class="mb-4">Show a list of  all Employees .</p>

<p>
    <a asp-action="Create" class="btn btn-primary ">
        <span aria-hidden="true" class="fa fa-plus"></span> Create New Products Employe
    </a>
</p>

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Employees</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserEMail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserFullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Controller)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Action)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NameDevice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MacAddress)
                        </th>
                        @*<th></th>*@
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserEMail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserFullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Controller)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Action)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NameDevice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MacAddress)
                        </th>
                        @*<th></th>*@
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @if (!String.IsNullOrEmpty(item.Photo))
                            {
                                <img class="img-profile rounded-circle" src="@Url.Content(item.Photo)" height="50" width="50" />
                            }
                            else
                            {
                                <img class="img-profile rounded-circle" src="~/img/no-profile.png" height="50" width="50" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEMail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Controller)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Action)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @if (item.Status)
                            {
                                <a href="#" class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">Success</span>
                                </a> 
                             }
                            else
                            {
                                <a href="#" class="btn btn-danger btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                    <span class="text">Error</span>
                                </a>
                              }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameDevice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MacAddress)
                        </td>

                        @*<td>
            <a asp-action="Edit" asp-route-id="@item.IdActivityLog" class="btn btn-warning">
                <span aria-hidden="true" class="fa  fa-pencil-alt fa-fw"></span>
            </a> |

            <a asp-action="Details" asp-route-id="@item.IdActivityLog" class="btn btn-info">
                <span aria-hidden="true" class="fa  fa-1x fa-list"></span>
            </a> |

            <a asp-action="Delete" asp-route-id="@item.IdActivityLog" class="btn btn-danger">
                <span aria-hidden="true" class="fa fa-times"></span>
            </a>
        </td>*@
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });</script>
}
